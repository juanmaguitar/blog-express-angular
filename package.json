{
  "title": "Clean Blog",
  "name": "startbootstrap-clean-blog",
  "version": "4.0.0-beta",
  "description": "Clean Blog is a Medium inspired blog theme for Bootstrap.",
  "homepage": "https://startbootstrap.com/template-overviews/clean-blog",
  "license": "MIT",
  "author": "Start Bootstrap",
  "contributors": [
    "David Miller (http://davidmiller.io/)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlackrockDigital/startbootstrap-clean-blog.git"
  },
  "scripts": {
    "start": "node index",
    "dev": "nodemon index",
    "build:scss": "node-sass src/scss/clean-blog.scss client/css/clean-blog.css",
    "build:scss:watch": "node-sass src/scss/clean-blog.scss client/css/clean-blog.css --watch",
    "lint:md": "remark README.md",
    "hook:standard": "./hooks/standard.sh"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "express-jwt": "^5.3.0",
    "jsonwebtoken": "^7.4.1",
    "marked": "^0.3.6",
    "moment": "^2.18.1",
    "mongoose": "^4.10.5",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.0.0",
    "pug": "^2.0.0-rc.3",
    "remark-lint": "^6.0.1"
  },
  "devDependencies": {
    "angular": "^1.6.6",
    "angular-route": "^1.6.6",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2"
  },
  "main": "index.js",
  "pre-commit": [ "hook:standard" ],
  "standard": {
    "globals": [
      "__base",
      "angular"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  }
}
