{
  "title": "Clean Blog",
  "name": "startbootstrap-clean-blog",
  "version": "4.0.0-beta",
  "description": "Clean Blog is a Medium inspired blog theme for Bootstrap.",
  "homepage": "https://startbootstrap.com/template-overviews/clean-blog",
  "license": "MIT",
  "author": "Start Bootstrap",
  "contributors": [
    "David Miller (http://davidmiller.io/)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlackrockDigital/startbootstrap-clean-blog.git"
  },
  "scripts": {
    "start": "node index",
    "dev": "nodemon index",
    "build": "webpack",
    "lint:md": "remark README.md",
    "hook:standard": "./hooks/standard.sh",
    "webpack": "node ./node_modules/webpack/bin/webpack",
    "debug": "node --inspect --debug-brk ./node_modules/webpack/bin/webpack",
    "__admin": "----------------------------------------------------",
    "clean:admin": "rm -rf public/admin",
    "build:admin": "npm run clean:admin && npm run build -- --env.target=admin",
    "build:admin:dev": "npm run build:admin -- --env.env=dev",
    "build:admin:dev:watch": "npm run build:admin:dev -- --watch",
    "build:admin:prod": "npm run build:admin -- --env.env=prod",
    "__front": "----------------------------------------------------",
    "clean:front": "rm -rf public/front",
    "build:front": "npm run clean:front && npm run build -- --env.target=front",
    "build:front:dev": "npm run build:front -- --env.env=dev",
    "build:front:dev:watch": "npm run build:front:dev -- --watch",
    "build:front:prod": "npm run build:front -- --env.env=prod",
    "__all": "----------------------------------------------------",
    "build:all:dev": "npm run build:admin:dev && npm run build:front:dev"
  },
  "dependencies": {
    "angular-markdown-editor": "^1.1.3",
    "body-parser": "^1.17.2",
    "bootstrap-markdown": "^2.10.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "express-jwt": "^5.3.0",
    "include": "^1.1.0",
    "jsonwebtoken": "^7.4.1",
    "markdown": "^0.5.0",
    "marked": "^0.3.6",
    "moment": "^2.18.1",
    "mongoose": "^4.10.5",
    "nodemailer": "^4.1.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.0.0",
    "pug": "^2.0.0-rc.3",
    "remark-lint": "^6.0.1"
  },
  "devDependencies": {
    "angular": "^1.6.6",
    "angular-highlightjs": "^0.7.1",
    "angular-jwt": "^0.1.9",
    "angular-marked": "^1.2.2",
    "angular-route": "^1.6.6",
    "angular-sanitize": "^1.6.6",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-modules-strip": "^0.1.1",
    "babel-preset-es2015": "^6.24.1",
    "bootstrap": "4.0.0-beta",
    "bootstrap-loader": "^2.2.0",
    "bootstrap-markdown": "^2.10.0",
    "css-loader": "^0.28.7",
    "exports-loader": "^0.6.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "font-awesome": "^4.7.0",
    "highlight.js": "^9.12.0",
    "hljs": "^6.2.3",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "imports-loader": "^0.7.1",
    "jquery": "^3.2.1",
    "marked": "^0.3.6",
    "nodemon": "^1.11.0",
    "popper.js": "^1.12.5",
    "postcss-loader": "^2.0.6",
    "pre-commit": "^1.2.2",
    "resolve-url-loader": "^2.1.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.5",
    "webpack-merge": "^4.1.0"
  },
  "main": "index.js",
  "pre-commit": [
    "hook:standard"
  ],
  "standard": {
    "globals": [
      "__require",
      "__base",
      "angular",
      "$"
    ],
    "ignore": [
      "/src/front/js/libs/*",
      "/public/**/*.*"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  }
}
