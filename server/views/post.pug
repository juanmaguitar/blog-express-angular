extends layout/index.pug

block header
  .row
    .col-lg-8.col-md-10.mx-auto
      .post-heading
        h1= post.title
        h2.subheading= post.subTitle
        span.meta
          | Posted by 
          a(href='#')= post.author
          |                 on #{post.createdAt}


block content
  .row
    .col-lg-8.col-md-10.mx-auto
      != marked(post.content)
